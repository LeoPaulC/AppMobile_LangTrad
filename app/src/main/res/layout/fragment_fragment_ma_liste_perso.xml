<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_ma_liste_perso">

    <RelativeLayout
        android:id="@+id/layout_page_acces_ma_liste_perso"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/webview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88333232"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView2_liste"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:adjustViewBounds="false"
            android:background="#009688"
            android:src="@drawable/side_nav_bar"
            app:srcCompat="@mipmap/ic_launcher_round"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView_tite_liste"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@id/imageView2_liste"
            android:layout_marginTop="10dp"
            android:ellipsize="none"
            android:includeFontPadding="false"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="22sp"
            app:autoSizeTextType="uniform"
            tools:text="@string/titre_liste" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/textView_tite_liste"
            android:background="#DD009688" />

        <ListView
            android:id="@+id/listeview_mot_perso"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/divider2"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
</FrameLayout>