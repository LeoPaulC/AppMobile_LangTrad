<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/trad_masque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mot_base"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/langue"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:elegantTextHeight="true"
            android:text="Le mot"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="47dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/mot_base"
            android:layout_toRightOf="@id/mot_base"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_menu_send" />

        <EditText
            android:id="@+id/editText_trad"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/imageView2"
            android:hint="Traduction"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/langue"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:text="TextView"
            android:textAlignment="center" />
    </RelativeLayout>

</LinearLayout>
