<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="408dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/emplacement_fragment_bar_du_haut"
            android:name="com.example.projet_android.Fragment_menu"
            android:layout_width="408dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <fragment
            android:id="@+id/emplacement_fragment_question"
            android:name="com.example.projet_android.Fragment_question"
            android:layout_width="match_parent"
            android:layout_height="338dp"
            android:layout_below="@id/emplacement_fragment_bar_du_haut"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="106dp" />

        <fragment
            android:id="@+id/emplacement_fragment_reponse"
            android:name="com.example.projet_android.Fragment_reponse"
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:layout_below="@id/emplacement_fragment_question"
            android:layout_marginTop="9dp" />

        <fragment
            android:id="@+id/emplacement_fragment_bas"
            android:name="com.example.projet_android.Fragment_bas"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/emplacement_fragment_reponse"
            android:layout_marginTop="10dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>