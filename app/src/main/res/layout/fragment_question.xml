<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_question">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner_liste_categorie"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/Textview_question"
            style="@android:style/Widget.Holo.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:isScrollContainer="true"
            android:keepScreenOn="false"
            android:maxHeight="150dp"
            android:minHeight="100dp"
            android:overScrollMode="ifContentScrolls"
            android:scrollbarStyle="insideInset"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_passer_question"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="133dp"
            android:layout_height="83dp"
            android:layout_marginLeft="280dp"
            android:background="@drawable/side_nav_bar"
            android:text="Button"
            android:textStyle="italic"
            android:visibility="invisible" />

        <GridView
            android:id="@+id/gridview_liste_mot"
            android:layout_width="match_parent"
            android:layout_height="558dp"
            android:layout_below="@id/spinner_liste_categorie"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:choiceMode="singleChoice"
            android:gravity="center"
            android:longClickable="true"
            android:numColumns="auto_fit"
            android:visibility="invisible" />

        <ListView
            android:id="@+id/liste_view_liste_mot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_liste_categorie"
            android:layout_marginTop="8dp"
            android:visibility="invisible" />

    </RelativeLayout>

</FrameLayout>