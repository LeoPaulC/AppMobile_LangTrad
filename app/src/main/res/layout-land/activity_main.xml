<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="733dp"
        android:layout_height="405dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/emplacement_fragment_bar_du_haut"
            android:name="com.example.projet_android.Fragment_menu"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <fragment
            android:id="@+id/emplacement_fragment_question"
            android:name="com.example.projet_android.Fragment_question"
            android:layout_width="379dp"
            android:layout_height="133dp"
            android:layout_below="@id/emplacement_fragment_bar_du_haut"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="106dp" />

        <fragment
            android:id="@+id/emplacement_fragment_reponse"
            android:name="com.example.projet_android.Fragment_reponse"
            android:layout_width="347dp"
            android:layout_height="134dp"
            android:layout_below="@id/emplacement_fragment_bar_du_haut"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/emplacement_fragment_question"
            android:layout_toRightOf="@id/emplacement_fragment_question" />

        <fragment
            android:id="@+id/emplacement_fragment_bas"
            android:name="com.example.projet_android.Fragment_bas"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/emplacement_fragment_reponse"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>